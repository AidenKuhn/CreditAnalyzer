/* Global Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  line-height: 1.6;
  color: #333;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

#root {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

/* Utility Classes */
.container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 40px;
  max-width: 600px;
  width: 100%;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.hidden {
  display: none !important;
}

.loading {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid #ffffff;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s ease-in-out infinite;
  margin-right: 10px;
}

@keyframes spin {
  to { 
    transform: rotate(360deg); 
  }
}

/* Header Styles */
.header {
  text-align: center;
  margin-bottom: 40px;
}

.title {
  font-size: 2.5em;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 1.1em;
  color: #718096;
  margin-bottom: 20px;
}

/* Status Info Styles */
.status-info {
  background: #f7fafc;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 30px;
  border-left: 4px solid #4299e1;
}

.status-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  font-size: 0.95em;
}

.status-row:last-child {
  margin-bottom: 0;
}

.status-label {
  color: #4a5568;
  font-weight: 500;
}

.status-value {
  color: #2d3748;
  font-weight: 600;
}

/* Wallet Styles */
.wallet-section {
  margin-bottom: 30px;
}

.wallet-address {
  background: #f0fff4;
  border: 1px solid #9ae6b4;
  border-radius: 8px;
  padding: 12px;
  font-family: monospace;
  font-size: 0.9em;
  text-align: center;
  margin-bottom: 20px;
  color: #22543d;
}

/* Form Styles */
.form-section {
  margin-bottom: 30px;
}

.section-title {
  font-size: 1.3em;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "üîê";
  margin-right: 10px;
}

.input-group {
  margin-bottom: 20px;
}

.input-label {
  display: block;
  font-weight: 500;
  color: #4a5568;
  margin-bottom: 8px;
}

.input-field {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 1em;
  transition: border-color 0.3s;
}

.input-field:focus {
  outline: none;
  border-color: #4299e1;
  box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
}

.input-field:disabled {
  background-color: #f7fafc;
  cursor: not-allowed;
}

/* Preset Buttons */
.preset-buttons {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
  margin-top: 8px;
}

.preset-btn {
  padding: 6px 12px;
  background: #edf2f7;
  border: 1px solid #e2e8f0;
  border-radius: 6px;
  font-size: 0.85em;
  cursor: pointer;
  transition: all 0.2s;
  text-align: center;
}

.preset-btn:hover {
  background: #e2e8f0;
  border-color: #cbd5e0;
}

/* Button Styles */
.btn {
  width: 100%;
  padding: 16px;
  border: none;
  border-radius: 8px;
  font-size: 1.1em;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #4299e1, #3182ce);
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background: linear-gradient(135deg, #3182ce, #2c5282);
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}

.btn-secondary {
  background: linear-gradient(135deg, #48bb78, #38a169);
  color: white;
}

.btn-secondary:hover:not(:disabled) {
  background: linear-gradient(135deg, #38a169, #2f855a);
  transform: translateY(-2px);
}

.btn-accent {
  background: linear-gradient(135deg, #ed8936, #dd6b20);
  color: white;
}

.btn-accent:hover:not(:disabled) {
  background: linear-gradient(135deg, #dd6b20, #c05621);
  transform: translateY(-2px);
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none !important;
}

/* Action Buttons */
.action-buttons {
  margin-bottom: 20px;
}

/* Message Styles */
.message {
  background: #e6fffa;
  border: 1px solid #81e6d9;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 20px;
  font-weight: 500;
  color: #234e52;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.message.error {
  background: #fed7d7;
  border-color: #feb2b2;
  color: #742a2a;
}

.message-close {
  background: none;
  border: none;
  font-size: 1.5em;
  cursor: pointer;
  color: inherit;
  margin-left: 16px;
  padding: 0;
  line-height: 1;
}

.message-close:hover {
  opacity: 0.7;
}

/* Footer Styles */
.footer {
  text-align: center;
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid #e2e8f0;
  color: #718096;
  font-size: 0.9em;
}

/* Transaction Status Styles */
.transaction-status {
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-left: 4px solid #3b82f6;
  border-radius: 8px;
  padding: 16px;
  margin: 20px 0;
  font-size: 0.9em;
}

.transaction-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 12px;
}

.status-icon {
  font-size: 1.2em;
}

.status-text {
  font-weight: 600;
  flex: 1;
}

.close-btn {
  background: none;
  border: none;
  font-size: 1.5em;
  cursor: pointer;
  color: #6b7280;
  padding: 0;
  line-height: 1;
}

.close-btn:hover {
  color: #374151;
}

.transaction-details {
  background: #ffffff;
  border-radius: 6px;
  padding: 12px;
  margin-bottom: 12px;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
  font-size: 0.85em;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #6b7280;
  font-weight: 500;
}

.detail-value {
  color: #374151;
  font-weight: 600;
}

.transaction-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 600;
  font-family: monospace;
}

.transaction-link:hover {
  text-decoration: underline;
}

.pending-info {
  text-align: center;
  padding: 12px;
  background: #fef3cd;
  border-radius: 6px;
  color: #92400e;
}

.confirming-info {
  text-align: center;
  padding: 12px;
  background: #dbeafe;
  border-radius: 6px;
  color: #1e40af;
}

.loading-dots {
  display: inline-flex;
  gap: 4px;
  margin-top: 8px;
}

.loading-dots span {
  width: 6px;
  height: 6px;
  background: #92400e;
  border-radius: 50%;
  animation: bounce 1.4s ease-in-out infinite both;
}

.loading-dots span:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dots span:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.progress-bar {
  width: 100%;
  height: 6px;
  background: #e5e7eb;
  border-radius: 3px;
  margin-top: 8px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #1d4ed8);
  transition: width 0.3s ease;
}

/* Network and Balance Warning Styles */
.network-warning {
  color: #dc2626 !important;
}

.network-correct {
  color: #059669 !important;
}

.balance-warning {
  color: #dc2626 !important;
}

.network-warning-message,
.balance-warning-message {
  background: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 10px;
  margin-top: 12px;
  color: #dc2626;
  font-size: 0.85em;
  text-align: center;
}

.balance-warning-message {
  background: #fffbeb;
  border-color: #fed7aa;
  color: #d97706;
}

/* Responsive Design */
@media (max-width: 640px) {
  .container {
    padding: 24px;
    margin: 10px;
  }
  
  .preset-buttons {
    grid-template-columns: repeat(2, 1fr) !important;
  }
}